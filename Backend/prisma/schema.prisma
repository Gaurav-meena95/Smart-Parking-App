generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String          @id @default(cuid())
  name             String
  email            String          @unique
  password         String
  phone            String
  role             Role            @default(user)
  approvalStatus   ApprovalStatus? @default(pending)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  vehicles         Vehicle[]
  parkings         Parking[]
  assignedParkings Parking[]       @relation("AssignedDriver")

  @@map("users")
}

enum ApprovalStatus {
  pending
  approved
  rejected

  @@map("approval_status")
}

model Vehicle {
  id            String      @id @default(cuid())
  vehicleName   String
  vehicleNumber String      @unique
  ownerName     String
  ownerId       String?
  vehicleType   VehicleType @default(car)
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  owner         User?       @relation(fields: [ownerId], references: [id])
  parkings      Parking[]

  @@map("vehicles")
}

model Parking {
  id               String        @id @default(cuid())
  ticketId         String        @unique
  userId           String
  vehicleId        String
  assignedDriverId String?
  location         String
  address          String
  parkingSlot      String?
  taskType         TaskType      @default(PARK)
  assignedAt       DateTime?
  entryTime        DateTime
  exitTime         DateTime?
  baseRate         Float         @default(100)
  serviceFee       Float         @default(30)
  gst              Float         @default(20)
  totalAmount      Float
  paymentMethod    String
  status           ParkingStatus @default(active)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  user             User          @relation(fields: [userId], references: [id])
  vehicle          Vehicle       @relation(fields: [vehicleId], references: [id])
  assignedDriver   User?         @relation("AssignedDriver", fields: [assignedDriverId], references: [id])

  @@map("parkings")
}

enum TaskType {
  PARK
  RETRIEVE

  @@map("task_types")
}

enum ParkingStatus {
  pending
  active
  in_progress
  completed
  cancelled

  @@map("parking_status")
}

enum Role {
  user
  manager
  driver
  admin

  @@map("user_roles")
}

enum VehicleType {
  car
  bike
  suv

  @@map("vehicle_types")
}
